# Root Environment Variables
# These are shared across the entire monorepo

# Environment
NODE_ENV=development
APP_ENV=development

# Monorepo Configuration
WORKSPACE_ROOT=/path/to/ledgerx
TURBO_TEAM=ledgerx-team
TURBO_TOKEN=your_turbo_token_here

# Global Database Configuration
GLOBAL_DATABASE_URL=postgresql://ledgerx_user:your_password@localhost:5432/ledgerx_db

# Global Redis Configuration
GLOBAL_REDIS_URL=redis://localhost:6379
GLOBAL_REDIS_PASSWORD=your_redis_password_here

# Global Logging
LOG_LEVEL=info
LOG_DIR=./logs
ENABLE_STRUCTURED_LOGGING=true

# Global Security
GLOBAL_ENCRYPTION_KEY=your_global_32_char_encryption_key_here
GLOBAL_JWT_SECRET=your_global_jwt_secret_min_32_chars_here

# Global API Keys (shared across packages)
SHARED_OPENAI_API_KEY=sk-your_shared_openai_api_key_here
SHARED_GOOGLE_API_KEY=your_shared_google_api_key_here

# Monitoring & Observability
SENTRY_DSN=https://your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
DATADOG_API_KEY=your_datadog_api_key_here

# CI/CD Configuration
CI=false
GITHUB_TOKEN=your_github_token_here
DOCKER_REGISTRY=your_docker_registry_here

# Feature Flags (Global)
ENABLE_FEATURE_FLAGS=true
FEATURE_FLAG_SERVICE_URL=https://your_feature_flag_service.com

# Global Rate Limiting
GLOBAL_RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT_WINDOW=900000
GLOBAL_RATE_LIMIT_MAX=1000

# Global CORS
GLOBAL_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://ledgerx.com

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=ledgerx-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here