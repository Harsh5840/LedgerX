# Database Configuration
NODE_ENV=development

# Primary Database URL
# Format: postgresql://username:password@host:port/database?options
DATABASE_URL=postgresql://ledgerx_user:your_password@localhost:5432/ledgerx_db?sslmode=prefer

# Alternative Database URLs for different environments
# DATABASE_URL=postgresql://user:pass@localhost:5432/ledgerx_dev
# DATABASE_URL=postgresql://user:pass@prod-host:5432/ledgerx_prod?sslmode=require

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Migration Settings
AUTO_MIGRATE=false
MIGRATION_LOCK_TIMEOUT=10000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Prisma Configuration
PRISMA_CLI_QUERY_ENGINE_TYPE=binary
PRISMA_GENERATE_SKIP_AUTOINSTALL=false

# Database Logging
DB_LOG_LEVEL=info
DB_SLOW_QUERY_THRESHOLD=1000

# Read Replica (if using)
# READ_DATABASE_URL=postgresql://readonly_user:pass@read-replica:5432/ledgerx_db

# Redis for Caching (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Monitoring
DB_METRICS_ENABLED=true
DB_HEALTH_CHECK_INTERVAL=30000