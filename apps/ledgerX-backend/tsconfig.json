{
    "extends": "@repo/typescript-config/base.json",
    
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node", "express"],
        "typeRoots": ["./types", "./node_modules/@types"],
        "moduleResolution": "node",
        "module": "commonjs"
    },
    "include": ["src/**/*"],  // include all files in the src directory
    "exclude": ["node_modules", "dist"]
}